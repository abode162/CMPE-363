# ========================================
# URL Shortener Microservices - Environment Configuration
# ========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# ========================================

# JWT Configuration
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=urlshortener

# Internal Service Communication
# Generate with: openssl rand -hex 32
INTERNAL_API_KEY=internal-service-key-change-in-production

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost,http://localhost:3003,http://localhost:5173

# Base URL for generated short URLs
BASE_URL=http://localhost

# Node Environment
NODE_ENV=production

# Debug Mode
DEBUG=false
